# Set global property to store all plugin targets. This may be used to link to all targets
set_property(GLOBAL PROPERTY uas_behavior_all_bt_plugin_targets)

# Macro to get all plugin targets created by uas_behavior_add_bt_plugin
macro(uas_behavior_get_all_bt_plugin_targets output)
    get_property(${output} GLOBAL PROPERTY uas_behavior_all_bt_plugin_targets)
endmacro()

# Macro that registers a library target for a behaviortree plugin
macro(uas_behavior_add_bt_plugin target_name sources)
    add_library(${target_name} SHARED ${sources})
    target_link_libraries(${target_name} uas_behavior::uas_behavior)
    target_compile_definitions(${target_name} PRIVATE BT_PLUGIN_EXPORT)
    install(TARGETS ${target_name} LIBRARY DESTINATION lib/@UAS_BEHAVIOR_SHARE_DIR_NAME@)
    uas_behavior_get_all_bt_plugin_targets(_tmp)
    list(APPEND _tmp ${target_name})
    set_property(GLOBAL PROPERTY uas_behavior_all_bt_plugin_targets ${_tmp})
endmacro()
